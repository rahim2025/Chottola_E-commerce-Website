# Environment
NODE_ENV=development

# Server
PORT=5000
FRONTEND_URL=http://localhost:5173,http://localhost:3000

# MongoDB
MONGO_URI=mongodb://localhost:27017/chottola-ecommerce
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/chottola?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-complex
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-different-from-above
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_REFRESH_EXPIRE_LONG=30d

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for password reset, verification, etc.)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FROM_EMAIL=noreply@chottola.com
FROM_NAME=Chottola Support

# Security Configuration
ADMIN_IP_WHITELIST=127.0.0.1,localhost

# Payment Gateway Configuration
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# bKash (Bangladesh)
BKASH_APP_KEY=your-bkash-app-key
BKASH_APP_SECRET=your-bkash-app-secret
BKASH_USERNAME=your-bkash-username
BKASH_PASSWORD=your-bkash-password
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

# Nagad (Bangladesh)
NAGAD_PUBLIC_KEY=your-nagad-public-key
NAGAD_PRIVATE_KEY=your-nagad-private-key
NAGAD_MERCHANT_ID=your-nagad-merchant-id

# SSL Commerz (Bangladesh)
SSLCOMMERZ_STORE_ID=your-ssl-store-id
SSLCOMMERZ_STORE_PASSWORD=your-ssl-store-password
SSLCOMMERZ_IS_LIVE=false

# Redis Configuration (for session storage and caching - optional)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PASSWORD_RESET_RATE_LIMIT_MAX=3
